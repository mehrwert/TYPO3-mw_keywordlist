# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true
charset = utf-8

# Remove trailing whitespace to avoid diffs with a bunch of EOL changes
trim_trailing_whitespace = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# CSS
[*.css]
indent_style = space
indent_size = 2

# SASS via *.scss files
[*.scss]
indent_style = space
indent_size = 2

# LESS via *.less files
[*.less]
indent_style = space
indent_size = 2

# HTML
[*.html]
indent_style = space
indent_size = 4

# XML or XLF or SVG
[*.{xml,xlf,svg}]
indent_style = space
indent_size = 4

# JavaScript
[*.{js,json}]
indent_style = space
indent_size = 2

# SQL
[*.sql]
indent_style = space
indent_size = 2

# PHP
[*.php]
indent_style = space
indent_size = 4

# Markdown
[*.md]
indent_style = tab
indent_size = 4
trim_trailing_whitespace = false

# YAML
[*.yml]
indent_style = space
indent_size = 2

# TypoScript
[*.{ts,setup,constants,tsconfig,typoscript}]
indent_style = space
indent_size = 4

[{setup.txt,constants.txt}]
indent_style = space
indent_size = 4

# Shell
[*.{sh,bash}]
indent_style = space
indent_size = 2
